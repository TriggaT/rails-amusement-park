

<h1> <%= @attraction.name %> </h1> <br>

<h3> Ticket Cost: <%= @attraction.tickets %> </h3> <br>
<h3> Nausea Rating: <%= @attraction.nausea_rating %> </h3> <br>
<h3> Happiness Rating: <%= @attraction.happiness_rating %> </h3> <br>
<h3> Minimum Height: <%= @attraction.min_height %> inches </h3> <br>

<% if current_user.admin  %>

<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>

<% else %>
 <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id %><br />
        <%= f.hidden_field :attraction_id %><br />
        <%= f.submit "Go on this ride"  %>

<% end  %>
<% end %>

<br> <%= link_to "See attractions", attractions_path %>
